<%= form_with model: @user, url: user_url(current_user.id), method: :patch, local: true, scope: :user do |f| %>
    <div class="text-center pb-3">
      <% if @user.avatar.attached? %>
        <img src="<%=(url_for(@user.avatar))%>" class="edit-img-user"
        alt="Avatar" />
      <% end %>
      <%= f.file_field :avatar %>
    </div>
    <div class="control-form-edit-user-info">
      <div class="edit-form-control-1">
        <div class="container-fluid user-information-edit">

          <div class="row first-edit-row">
            <div class="  p-0">
              <%= f.text_field :first_name, placeholder:"First Name" %>
            </div>
            <div class=" ">
              <%= f.text_field :last_name, placeholder:"Last Name"  %>
            </div>
            <div class=" ">
              <input type="text", placeholder="Birth Date">
            </div>
          </div>


          <div class="row mt-3 second-edit-row">
            <div>
              <%= f.text_field :phone, placeholder:"Phone number" %>
            </div>
            <div class="">
              <%= f.text_field :address, placeholder:"Address"%>
            </div>
            <div>
              <%= f.text_field :status, placeholder:"Junior Full Stack" %>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-center mt-2 mb-3">
          <%= f.select :country, CS.countries%>
        </div>
      </div>
      <div class="text-center description-edit-area">
        <p>
          <%= f.text_area :description %>
        </p>
      </div>
    </div>
    <div class="btn-update-user">
      <%= f.submit 'Update user' %>
    </div>
<% end %>
