<%= form_with model: @user, url: user_url(current_user.id), method: :patch, local: true, scope: :user do |f| %>
    <div class="">
      <% if @user.avatar.attached? %>
        <img src="<%=(url_for(@user.avatar))%>" class="edit-img-user"
        alt="Avatar" />
      <% end %>
      <%= f.file_field :avatar %>
    </div>


    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
    </p>
    <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
    </p>
    <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
    </p>
    <p>
    <%= f.label :status %><br>
    <%= f.text_field :status %>
    </p>
    <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
    </p>
    <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    </p>

  <%= f.submit 'Update user' %>
<% end %>
